---
import FooterBodyComponent from "./Footer-body.astro";
import FooterBottomComponent from "./Footer-bottom.astro";
import { getLocalizedPaths } from "../helpers/utils.ts";
import { useLang } from "../helpers/context.ts";

export async function getStaticPaths() {
  return getLocalizedPaths();
}

const lang = useLang(Astro);
---

<footer class="footer w-full font-sans">
    <!-- Top section -->
    <FooterBodyComponent lang={lang} />

    <!-- Bottom section -->
    <FooterBottomComponent lang={lang} />
</footer>


