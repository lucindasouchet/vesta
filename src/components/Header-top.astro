---
// import LanguageDropdownComponent from "./LanguageDropdown.astro";
import ButtonWithIconComponent from "../components/core/ButtonWithIcon.astro";
import PartnerProgramIcon from "../../public/images/icons/partner-program.svg";
import i18next from "../i18n.ts";
import LanguageDropdownComponent from "../components/LanguageDropdown.astro";

const { t } = i18next;
---

<div id="header-top">
	<div class="shadow-sm">
		<div
			class="hidden md:flex h-10 items-center justify-end md:text-lg lg:text-xl/6"
		>
			<!-- Right: Links and actions -->
			<div class="flex items-center gap-8">
				<!-- Partner Program button with Icon -->
				<ButtonWithIconComponent
					id="partner-program-btn"
					label={t("header.vesta_partner_program")}
					icon={PartnerProgramIcon}
					variantButton="hover:text-secondary-20-dark focus:outline-none focus:text-primary-10-light"
					variantLabel="label-1"
					variantIcon="h-7 w-7"
					type="button"
					href="/#"
				/>

				<!-- language select -->
				<LanguageDropdownComponent
					id="languageDdlIndex"
					name="languageDdlIndex"
				/>
			</div>
		</div>
	</div>
</div>
